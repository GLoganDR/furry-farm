extends ../shared/template
block content
  h2 Edit Profile
  .row
    .col-xs-6
      form(role='form', method='post', action='/users/profile')
        input(type='hidden', name='_method', value='put')
          .form-group
            label(for='name') Name:
            input.form-control#name(type='text', name='name', value=user.name, autofocus=true)
          .form-group
            label(for='species') Species:
            input.form-control#species(type='text', name='species', value=user.species, autofocus=true)
          .form-group
            label(for='locName') Location:
            input.form-control#locName(type='text', name='loc', value=user.loc.name)
            input.form-control#locLat(type='hidden', name='loc', value=user.loc.lat)
            input.form-control#locLng(type='hidden', name='loc', value=user.loc.lng)
          .form-group
            label(for='email') Email
            input.form-control#email(type='email', name='email', value=user.email, autofocus=true)
          .form-group
            label(for='age') Age
            input.form-control#age(type='number', name='age', value=user.age)

        .col-xs-6
          .form-group
            label(for='photo') Photo
            input.form-control#photo(type='text', name='photo', value=user.photo)
          .form-group
            label(for='displayName') displayName:
            input.form-control#displayName(type='text', name='displayName', value=user.displayName)
          .form-group
            label(for='tagline') Tagline
            input.form-control#tagline(type='text', name='tagline', value=user.tagline)

  .row
    .radio
      label
        input(type='radio' name='visible' value='public' checked=user.isVisible)
        span Public
    .radio
      label
        input(type='radio' name='visible' value='private', checked=!user.isVisible)
        span Private

    button.btn.btn-primary(type='submit') Submit

block scripts

