extends ../shared/template
block content
  .container
    .row
      .col-xs-4
      .col-xs-6.h3 Make Contact with .....
      .col-xs-2
    .row
        .col-xs-3
        .col-xs-6
          .panel.panel-default
            .panel-body
              form(role='form', method='post', action='/messages/#{user._id}/send')
                .row
                  .col-xs-6
                    .radio
                      label
                        input(type='radio' name='mtype' value='text' checked=true)
                        span Text
                    .radio
                      label
                        input(type='radio' name='mtype' value='email')
                        span Email
                    .radio
                      label
                        input(type='radio' name='mtype' value='internal')
                        span Internal/Proposal
                  .col-xs-6
                    .form-group
                      label(for='message') Message
                      textarea.form-control#message(name='body', autofocus=true)
                    .form-group
                      button.btn.btn-info.btn-sm(type='submit') Send Message
        .col-xs-3




block scripts

