.navbar.navbar-default(role='navigation')
  .container-fluid
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      p.navbar-text.navbar-left
        a.navbar-link(href='#')= user.email

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if user
          li: a(href='/messages')
            span Messages &nbsp;
            span.badge= user.unread
          li
            form.navbar-form(method='post', action='/logout')
              .form-group
                input(type='hidden', name='_method', value='delete')
                button.btn.btn-danger Logout
        else
          li: a(href='/register') Register
          li: a(href='/login') Login
          li: a(href='/auth/google'): i.fa.fa-google.fa-lg
          li: a(href='/auth/twitter'): i.fa.fa-twitter.fa-lg
          li: a(href='/auth/facebook'): i.fa.fa-facebook.fa-lg


